{
  "ConnectionStrings": {
    "MSSQLConnection": ""
  },
  "RabbitMQ": {
    "Host": "",
    "Port": 5671,
    "Username": "",
    "Password": "",
    "UseTLS": true,
    "VirtualHost": ""
  },
  "Redis": {
    "Host": "",
    "Port": 6379,
    "Password": "",
    "DefaultDatabase": 0
  },
  "JWT": {
    "Audience": "",
    "Issuer": "",
    "SecretKey": "",
    "TokenValidtyInMinutes": 15,
    "RefreshTokenValidtyInDays": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Fatal",
        "System": "Fatal"
      }
    },
    "Enrich": [ "FromLogContext", "WithExceptionDetails" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/errors/log-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Error",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/requests/request-log-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}"
        }
      }
    ],
    "Filter": [
      {
        "Name": "ByIncludingOnly",
        "Args": {
          "expression": "@SourceContext like 'NextFlix%'"
        }
      }
    ]
  }
}
